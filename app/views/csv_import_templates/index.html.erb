<% @page_title = "CSV Import Templates" %>
<div class="row-fluid">
  <div class="row-fluid"><p class="lead">Templates</p></div>
  <div class="row-fluid">
    <table class="table table-bordered table-condensed table-striped" summary="Template List">
    <tr class="header">
      <th>Filename</th>
      <th>Project</th>
      <th>Uploader</th>
      <th>Uploaded</th>
      <th>Actions</th>
    </tr>
    <% @templates.each do |template| %>
    <tr>
      <td><%= template.template_file_file_name %></td>
      <td><% if template.project %><%= template.project.name %><% end %></td>
      <td><%= template.user.email %></td>
      <td><%= template.created_at %></td>
      <td>
        <div class="btn-group">
          <%= link_to("Show", csv_import_template_path(template), :class => 'btn btn-small' ) %>
          <%= link_to("Edit", edit_csv_import_template_path(template), :class => 'btn  btn-small') %>
          <%= link_to("Destroy", csv_import_template_path(template), :class => 'btn btn-small btn-danger', :method => :delete) %>
        </div>
      </td>
    </tr>
    <% end %>
    </table>
	</div>
	<div class="row-fluid"><%= link_to("Upload New CSV Import Template", { :action => 'new' }, :class => 'btn btn-primary action new pull-right') %></div>
</div>