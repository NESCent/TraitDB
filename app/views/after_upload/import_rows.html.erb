<% @page_title = 'Import Rows' %>
<% if @import_job.failed? %>
  <div class="row-fluid">
    <p class="alert alert-error">Unable to import rows in <%= @import_job.file_name %></p>
    <%= link_to("Discard Dataset", {:action => 'delete', :id => @import_job.csv_dataset.id}, :class => 'btn btn-danger', :method => :delete) %>  </div>
<% elsif @import_job.imported? %>
  <div class="row-fluid">
    <p class="alert alert-success">Imported <%= @import_job.file_name %></p>
  </div>
  <div class="row-fluid">
    <%= link_to("Next", next_wizard_path, :class => 'btn') %>
  </div>
<% else %>
  <div class="row-fluid">
    <p class="alert alert-info">Importing rows in <%= @import_job.file_name %>, reload to check status</p>
  </div>
  <div class="row-fluid">
    <%= link_to("Reload", wizard_path, :class => 'btn') %>
  </div>
<% end %>
