<% @page_title = "Edit Dataset" %>
<div class="row-fluid">
  <div class="row"><h2>Update dataset:</h2></div>
  <div class="row">
  <%= form_for(:dataset, :url => {:action => 'update', :id => @dataset.id }, :html => { :multipart => 'true', :class => "upload_form" }) do |f| %>
    <%= render(:partial => "form", :locals => { :f => f }) %>
    <div class="form-buttons">
    	<%= submit_tag("Update dataset", :class => 'btn btn-primary') %>
    </div>
  <% end %>
  </div>
  <div class="row"><%= link_to("<< Back", csv_datasets_path, :class => 'btn') %>
</div>
