<% @page_title = "CSV Import Template" %>
<div class="row-fluid">
  <div class="row-fluid"><p class="lead">CSV Import Template</p></div>
  <div class="row-fluid">
    <table class="table table-striped table-bordered">
      <tr>
        <th>File</th>
        <td><%= link_to(@template.template_file_file_name, @template.template_file.url) %></td>
      </tr>
      <tr>
        <th>Project</th>
        <td><% if @template.project %><%= @template.project.name %><% end %></td>
      </tr>
      <tr>
        <th>Owner</th>
        <td><%= @template.user.email %></td>
      </tr>
      <tr>
        <th>Created</th>
        <td><%= @template.created_at %></td>
      </tr>
      <tr>
        <th>Updated</th>
        <td><%= @template.updated_at %></td>
      </tr>
    </table>
  </div>
  <div class="row-fluid"><%= link_to("<< Back", csv_import_templates_path, :class => 'btn') %>
</div>
</div>
