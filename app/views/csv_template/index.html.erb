<div class="row-fluid"><p class="lead">CSV Templates</p></div>
<div class="row-fluid">
  <div class="row-fluid">
    <table class="table table-bordered table-condensed table-striped" summary="Config List">
      <tr class="header">
        <th>Config name</th>
        <th>Config Info</th>
        <th>Download Template CSV</th>
      </tr>
      <% @configs.each do |config| %>
        <tr>
          <td><%= config.name %></td>
          <td>
            <div class="btn-group">
            <% if config.trait_group_names.empty? %>
              <%= link_to('Default', {action: :info, id: config.id, trait_group_name: nil}, class: 'btn btn-small') %>
            <% else %>
              <% config.trait_group_names.each do |trait_group_name| %>
                <%= link_to(trait_group_name, {:action => :info, :id => config.id, :trait_group_name => trait_group_name }, :class => 'btn btn-small') %>
              <% end %>
            <% end %>
            </div>
          </td>
          <td>
            <div class="btn-group">
              <% if config.trait_group_names.empty? %>
                <%= link_to(raw("<i class='icon-download-alt icon-white'></i>Default"), {action: :download, format: :csv, id: config.id, trait_group_name: nil}, class: 'btn btn-small btn-primary') %>
              <% else %>
                <% config.trait_group_names.each do |trait_group_name| %>
                <%= link_to(raw("<i class='icon-download-alt icon-white'></i>#{trait_group_name}"), {:action => :download, :format => :csv, :id => config.id, :trait_group_name => trait_group_name}, :class => 'btn btn-small btn-primary') %>
              <% end %>
             <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
