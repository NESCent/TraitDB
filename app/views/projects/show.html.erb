<% @page_title = @project.name %>
<div class="row-fluid">
  <div class="row-fluid">
    <p class="lead">Project Details</p>
  </div>
  <div class="row-fluid">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Name</th>
        <td><%= @project.name %></td>
      </tr>
      <tr>
        <th>Description (Summary)</th>
        <td><%= @project.summary_description %></td>
      </tr>
      <tr>
        <th>Description (Detail)</th>
        <td><%= @project.detail_description %></td>
      </tr>
      <tr>
        <th>URL</th>
        <td><%= link_to_if(@project.url, @project.url_text, @project.url) %></td>
      </tr>
      <tr>
        <th>Users</th>
        <td>
          <ul>
            <% @project.users.each do |u| %>
              <li><%= u.email %></li>
            <% end %>
          </ul>
        </td>
      </tr>
      <tr>
        <th>Created</th>
        <td><%= @project.created_at %></td>
      </tr>
      <tr>
        <th>Updated</th>
        <td><%= @project.updated_at %></td>
      </tr>
    </table>
  </div>
  <div class="row-fluid">
    <%= link_to('Back to Projects', projects_path, :class => 'btn btn-primary') %>
  </div>
</div>

