<% @page_title = @categorical_trait_category.name %>
<div class="row-fluid">
  <div class="row-fluid"><p class="lead">Categorical Trait</p></div>
  <div class="row-fluid">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Name</th>
        <td><%= @categorical_trait_category.name %></td>
      </tr>
      <tr>
        <th>Coded OTUs</th>
        <td>
          <ol>
            <% @categorical_trait_category.otus.each do |coded_otu| %>
              <li><%= link_to(coded_otu.name, otu_path(coded_otu)) %></li>
            <% end %>
          </ol>
        </td>
      </tr>
      <tr>
        <th>Created</th>
        <td><%= @categorical_trait_category.created_at %></td>
      </tr>
      <tr>
        <th>Updated</th>
        <td><%= @categorical_trait_category.updated_at %></td>
      </tr>
    </table>
  </div>
</div>
</div>
