<div class="row-fluid">
  <div>
    <p class="lead">Template: <strong><%= @template.name %></strong>: Group: <strong><%= @group.name %></strong></p>
  </div>
  <div class="well well-large">
    <div class="row-fluid">Taxonomy Column</div>
      <% @info[:taxonomy_columns].each do |col| %>
        <div class="row-fluid offset1"><strong><%= col %></strong></div>
      <% end %>
  </div>
  <div class="well well-large">
    <div class="row-fluid">Categorical Trait Column</div>
        <% @info[:categorical_traits].each do |cat| %>
          <div class="row-fluid offset1">
            <span class="span3"><strong><%= cat[:name] %></strong></span>
            <span class="span7">
              <i>Allowed values:</i>
              <% cat[:values].each do |v| %>
                <li><%= v %></li>
              <% end %>
            </span>
          </div>
        <% end %>
  </div>
  <div class="well well-large">
    <div class="row-fluid">Continuous Trait Column</div>
    <% @info[:continuous_traits].each do |con| %>
      <div class="row-fluid offset1">
        <span class="span3"><strong><%= con[:name] %></strong></span>
        <span class="span7">(<%= con[:format]%>)</span>
      </div>
    <% end %>
  </div>
  <div class="well well-large">
    <div class="row-fluid">Source Column</div>
    <% @info[:categorical_traits].each do |cat| %>
      <div class="row-fluid offset1">
        <span class="span3"><strong><%= cat[:source_name] %></strong></span>
      </div>
    <% end %>
    <% @info[:continuous_traits].each do |con| %>
      <div class="row-fluid offset1">
        <span class="span3"><strong><%= con[:source_name] %></strong></span>
      </div>
    <% end %>
  </div>
  <div class="well well-large">
    <div class="row-fluid">Metadata Column</div>
    <% @info[:metadata_columns].each do |col| %>
      <div class="row-fluid offset1"><strong><%= col %></strong></div>
    <% end %>
  </div>

  <div class="well well-large">
    <div class="row-fluid">Notes Column (optional)</div>
    <% @info[:categorical_traits].each do |cat| %>
      <div class="row-fluid offset1">
        <span class="span3"><strong><%= cat[:notes_name] %></strong></span>
      </div>
    <% end %>
    <% @info[:continuous_traits].each do |con| %>
      <div class="row-fluid offset1">
        <span class="span3"><strong><%= con[:notes_name] %></strong></span>
      </div>
    <% end %>
  </div>

</div>
